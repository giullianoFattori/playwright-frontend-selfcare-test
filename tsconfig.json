{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "@playwright/test"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["tests/ui/*"],
      "@api/*": ["tests/api/*"],
      "@shared/*": ["tests/shared/*"]
    }
  },
  "include": ["tests", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
